<script>
  import wepy from 'wepy'

  export default class Cart extends wepy.page {
    config = {
      navigationBarTitleText: '购物车'
    }
    onShow() {
      this.cartDataArr = wepy.getStorageSync('cartDataArr')
    }
    data = {
      cartDataArr: [],
      selectStatusCount: 0
    }
    computed = {
      cartDataArr() {
        this.selectStatusCount = 0
        this.cartDataArr.forEach(item => {
          if (item.selectStatus) {
            this.selectStatusCount++
          }
        })
        return this.cartDataArr
      }
    }
    methods = {
      countNumberTapHandle(index, method) {
        this.cartDataArr[index].goods_number += method
        if (this.cartDataArr[index].goods_number <= 0) {
          wepy
            .showModal({
              title: '',
              content: '是否删除该商品'
            })
            .then(res => {
              if (res.confirm) {
                // console.log('用户点击确定')
                this.cartDataArr.splice(index, 1)
              } else if (res.cancel) {
                // console.log('用户点击取消')
                this.cartDataArr[index].goods_number = 1
              }
              this.$apply()
            })
        }
      },
      countNumberInput(index, event) {
        console.log(index, event.detail.value)
        let oldGoodsNumber = this.cartDataArr[index].goods_number
        let inputNumber = parseInt(event.deatil.value)
        if (inputNumber < 1 || isNaN(inputNumber) || '') {
          return oldGoodsNumber
        } else {
          this.cartDataArr[index].goods_number = inputNumber
        }
      },
      // icon-xuanze-fill
      switchSelectStatus(index) {
        this.cartDataArr[index].selectStatus = !this.cartDataArr[index]
          .selectStatus
        // this.selectStatusCount = 0
        // this.cartDataArr.forEach(item => {
        //   if (item.selectStatus) {
        //     this.selectStatusCount++
        //   }
        // })
      },
      selectAllHandle(selectAllStatus) {
        // console.log(selectAllStatus)
        this.cartDataArr.forEach(item => {
          item.selectStatus = !selectAllStatus
        })
      }
    }
  }
</script>
