            <text class="product-price-decimal">.00</text>
          </view>
          <view class="product-count-eidt">
            <view class="count-min {{ item.goods_number <= 1? 'disabled' :'' }}" @tap="countNumberTapHandle({{ index }}, {{ -1 }})">-</view>
            <input class="count-number" type="number" @input="countNumberInput({{ index }})" value="{{ item.goods_number }}" />
            <view class="count-add" @tap="countNumberTapHandle({{ index }}, {{ 1 }})">+</view>
          </view>
        </view>
      </view>
    </block>
  </view>
  <view class="bottom-space"></view>
  <view class="fixed-bar">
    <view class="iconfont-tap icon-xuanze {{ selectStatusCount == cartDataArr.length? 'icon-xuanze-fill':'' }}" @tap="selectAllHandle({{ selectStatusCount == cartDataArr.length }})"></view>
